= <%= Frontier::FormHeader.new(model).to_s %>

<% model.attributes.select(&:show_on_form?).each_with_index do |attribute, index| -%>
<% options = {} -%>
<% options = {autofocus: true} if index.zero? -%>
<%= render_with_indent(1, Frontier::Input::Factory.build_for(attribute).to_s(options)) %>
<% end -%>
  .form-actions
    = f.button :submit
    %span.or or
    = link_to "Cancel", <%= model.url_builder.index_path %>
